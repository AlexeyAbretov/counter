{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "@components": ["components"],
            "@contexts": ["contexts"],
            "@containers": ["containers"],
            "@constants": ["constants"],
            "@types": ["types/types"],
            "@store": ["store"],
            "@theme": ["theme"],
        },
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}